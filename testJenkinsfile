pipeline{
    agent {docker {image 'node:14.21.3'
          args '-u root:sudo'}}

    stages{
        stage('dep install'){
            steps{
            //  sh 'npm cache clean'
            //    sh 'sudo chown -R 995:993 "/.npm"'
                sh 'npm install'
            }

        }
        stage('package'){
            steps{
                sh 'npm pack'
            }
        }

    }
}